function downloadMkInitFile() {
  read -p "Are you using Btrfs? [y/n]" isBtrfs
  case "$isBtrfs" in
    y|Y ) echo "Downloading CPIO-Config..."; wget -q -O /etc/mkinitcpio.conf https://raw.githubusercontent.com/chloecdn/arch-vfio-vm-stuff/main/etc/mkinitcpio.conf.btrfs;;
    n|N ) echo "Downloading CPIO-Config..."; wget -q -O /etc/mkinitcpio.conf https://raw.githubusercontent.com/chloecdn/arch-vfio-vm-stuff/main/etc/mkinitcpio.conf;;
    * ) echo "Invalid Input..."; downloadMkInitFile;;
  esac
}

if [ "$EUID" -ne 0 ]
  then echo "Please run this script as root (sudo)"
  exit
fi

echo "Downloading PCI-Override Script..."
wget -q -O /usr/local/bin/vfio-pci-override.sh https://raw.githubusercontent.com/chloecdn/arch-vfio-vm-stuff/main/vfio-pci-override.sh
chmod +x /usr/local/bin/vfio-pci-override.sh
echo "Done."
clear
downloadMkInitFile
echo "Done."
clear
echo "Downloading VFIO-Config..."
wget -q -O /etc/modprobe.d/vfio.conf https://raw.githubusercontent.com/chloecdn/arch-vfio-vm-stuff/main/etc/modprobe.d/vfio.conf
echo "Done."
clear
echo "Rebuilding Kernel-Modules..."
mkinitcpio -P
echo "Done."
echo "Your Non-Boot GPU's should be isolated now. Please reboot for it to take effect."
